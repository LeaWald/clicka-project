{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    // "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": [],
    "paths": {
      "@types/*": ["../../types/*"]
    }
  },
  "include": ["src/**/*", "../../types/**/*", "../types", "../shared-types/book.ts", "../shared-types/mapCoordinates.ts", "../shared-types/src/mapLayout.ts", "../frontend/occupancy.ts"],

  "exclude": ["node_modules", "**/*.test.ts"]
}