{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@types/*": ["../../types/*"]
    }
  },
  "include": ["src/**/*", "../../types/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}